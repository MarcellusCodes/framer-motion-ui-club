---
import Navbar from "./Navbar.astro";
import Grid from "../layouts/Grid.astro";

export interface HeaderProps {
  index: boolean;
}

const { index = false } = Astro.props as HeaderProps;
---

<header class="header h-auto pb-12 mb-12">
  <Navbar />
  <div class="py-6"></div>
  <div class="container mx-auto pb-20 md:pb-0">
    {
      index ? (
        <h2 class="px-4 md:px-0">
          <a
            class="font-primary text-black text-xl sm:text-2xl lg:text-3xl hover:underline decoration-black"
            href="/"
          >
            quick and cool web dev shit.
          </a>
        </h2>
      ) : (
        <div class="flex flex-row items-center space-x-4 px-4 md:px-0">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="fill-current text-black w-4 h-4 sm:w-6 sm:h-6 lg:w-8 lg:h-8"
          >
            <path
              d="m16.752 23.994-9.873-9.873a3 3 0 0 1 0-4.242L16.746.012l1.414 1.414-9.867 9.867a1 1 0 0 0 0 1.414l9.873 9.873Z"
              data-name="01 align center"
            />
          </svg>
          <h2>
            <a
              class="font-primary text-black text-xl sm:text-2xl lg:text-3xl hover:underline decoration-black"
              href="/"
            >
              quick and cool web dev shit.
            </a>
          </h2>
        </div>
      )
    }

    <div class="py-6"></div>
    <Grid>
      <slot />
    </Grid>
  </div>
</header>

<style>
  .header {
    background: linear-gradient(135deg, #0099ff, #00bbff);
    clip-path: polygon(0px 0px, 100% 0px, 100% 80%, 0% 100%);
  }
</style>
